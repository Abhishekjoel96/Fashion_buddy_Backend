{
    "version": 2,
    "builds": [
        { "src": "api/**/*.js", "use": "@vercel/node" }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/api/$1" },
        { "src": "/(.*)", "dest": "server.js" }
    ],
    "crons": [
        {
            "path": "/api/cleanup.js",
            "schedule": "0 * * * *"
        }
    ]
}
